<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <% bdata.blogPosts.forEach((blogPost) => { %>
            <div class="col-md-8 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h3>Post <%= parseInt(blogPost.post_id) %></h3>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= blogPost.title %></h5>
                        <hr> <!-- Divider -->
                        <p class="card-text"><%= blogPost.content %></p>
                        <hr> <!-- Divider -->
                        <p class="card-time">Created at: <%= blogPost.created_at %></p>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>