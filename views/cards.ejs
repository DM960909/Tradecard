<div class="container">
    <div class="cards-background">
    <div class="row">
        <% bdata['data'].forEach((card) => { %>
        <div class="col-lg-4 col-md-6 col-sm-12  mt-4">
          <div class="card justify-content-md-center pt-4 h-100">
            <img src="<%= card.image_url %>" class="card-img-top img-fluid mx-auto d-block pb-4" style="height: 300px; width: 300px;"  alt="...">
            <div class="card-body text-center">
              <h5 class="card-title"><%= card.name %></h5>
              <p class="card-text"><%= card.description %></p>
              <a class="btn btn-dark shadow-none" href="/cardDetails?card=<%= card.card_id %>">View Card</a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

</div>


